<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="5dp"
            app:navigationIcon="@drawable/vec_arrow_back"
            app:title="@string/Acoes"
            app:titleTextColor="?colorPrimary" />


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:alignContent="flex_end"
            app:alignItems="flex_end"
            app:flexWrap="wrap"
            app:justifyContent="flex_end">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_acao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@id/mouse_btn_dir"
                app:layout_constraintEnd_toEndOf="@id/mouse_btn_dir"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/vec_add"
                android:contentDescription="@string/Gravar_acao" />

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
</layout>